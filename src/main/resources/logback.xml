<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="logPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %mdc - %msg%n"/>
    <property name="logEncoding" value="UTF-8"/>
    <property name="logDirectory" value="/Users/user/Project/Coba/DOT/mini-project-tes/logs/tes_log"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %mdc- %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="SIZEDATELOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDirectory}/tes_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <charset>${logEncoding}</charset>
            <pattern>${logPattern}</pattern>
        </encoder>
    </appender> 
    
    <appender name="FIXEDLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDirectory}/tes.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${logDirectory}/tes.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <maxFileSize>20MB</maxFileSize>
        </triggeringPolicy>
        
        <encoder>
            <charset>${logEncoding}</charset>
            <pattern>${logPattern}</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.web" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.mini.project.tes" level="debug" additivity="false">
        <appender-ref ref="FIXEDLOG"/>
    </logger>

    <logger name="com.mini.project.tes" level="info" additivity="false">
        <appender-ref ref="FIXEDLOG"/>
    </logger>
    
    <logger name="org.hibernate" level="error" additivity="false">
        <appender-ref ref="FIXEDLOG"/>
    </logger>

    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>